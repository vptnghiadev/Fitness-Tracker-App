<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivWorkout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/dumbell"
        app:srcCompat="@android:drawable/ic_dialog_info"
        tools:src="@drawable/dumbell" />

    <TextView
        android:id="@+id/tvWorkoutType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/ivWorkout"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvWorkoutTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkoutType"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivWorkout"
        android:text="TextView" />
</RelativeLayout>